{
  "name": "xrpl-agent-wallet-mcp",
  "version": "0.2.0",
  "description": "XRPL Agent Wallet MCP Server - Secure, policy-controlled wallet infrastructure for AI agents on the XRP Ledger",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    }
  },
  "files": [
    "dist",
    "policies",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "xrpl-wallet-mcp": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run"
  },
  "keywords": [
    "xrpl",
    "xrp",
    "ripple",
    "mcp",
    "model-context-protocol",
    "ai-agent",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "security"
  ],
  "author": "9 RESE' LLC <contact@9rese.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9RESE/xrpl-agent-wallet-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/9RESE/xrpl-agent-wallet-mcp/issues"
  },
  "homepage": "https://github.com/9RESE/xrpl-agent-wallet-mcp#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "argon2": "^0.44.0",
    "xrpl": "^4.1.0",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.4.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "zod": "^3.20.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    }
  }
}
